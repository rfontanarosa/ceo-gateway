{
  "swagger": "2.0",
  "info": {
    "description": "ceo-gateway API",
    "version": "0.0.0",
    "title": "ceo-gateway API",
    "contact": {
      "email": "robertofontanarosa@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "127.0.0.1:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/login": {
      "get": {
        "summary": "Performs login using server side configured credentials",
        "description": "",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/create-project": {
      "post": {
        "summary": "Creates a new project",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "",
            "in": "body",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateProjectRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a JSON which includes the projectId and the Collect Earth Online url",
            "schema": {
              "$ref": "#/definitions/CreateProjectResponse"
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/get-collected-data/{id}": {
      "get": {
        "summary": "Gets collected data",
        "description": "",
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns collected data in CSV format (id,YCoordinate,XCoordinate,class,editedClass)"
          }
        }
      }
    },
    "/delete-project/{id}": {
      "get": {
        "summary": "Deletes a project",
        "description": "",
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/get-project-stats/{id}": {
      "get": {
        "summary": "Gets project stats",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a JSON which includes the projectId and the project stats",
            "schema": {
              "$ref": "#/definitions/GetProjectStatsResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "CreateProjectRequest": {
      "type": "object",
      "required": [
        "classes",
        "plots",
        "title",
        "plotSize"
      ],
      "properties": {
        "classes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "plots": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lat": {
                "type": "number",
                "format": "double"
              },
              "lon": {
                "type": "number",
                "format": "double"
              }
            }
          }
        },
        "title": {
          "type": "string"
        },
        "plotSize": {
          "type": "integer",
          "format": "int32"
        },
        "imageryId": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "CreateProjectResponse": {
      "type": "object",
      "properties": {
        "projectId": {
          "type": "integer",
          "format": "int32"
        },
        "ceoCollectionUrl": {
          "type": "string"
        },
        "errorMessage": {
          "type": "string"
        }
      }
    },
    "GetProjectStatsResponse": {
      "type": "object",
      "properties": {
        "projectId": {
          "type": "integer",
          "format": "int32"
        },
        "unanalyzedPlots": {
          "type": "integer",
          "format": "int32"
        },
        "analyzedPlots": {
          "type": "integer",
          "format": "int32"
        },
        "flaggedPlots": {
          "type": "integer",
          "format": "int32"
        },
        "totalPlotsReviewed": {
          "type": "integer",
          "format": "int32"
        },
        "completationPercentage": {
          "type": "integer",
          "format": "int32"
        }
      }
    }
  }
}
